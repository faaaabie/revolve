while true
	do
         for i in {1..1}; do
                ./revolve.py --experiment-name EC_C/data/cost_of_regulation_big_$i --run $i --manager experiments/EC_C/cost_of_regulation.py --port-start 11141  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
         for i in {2..2}; do
                ./revolve.py --experiment-name EC_C/data/cost_of_regulation_big_$i --run $i --manager experiments/EC_C/cost_of_regulation.py --port-start 11200  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
         for i in {3..3}; do
                ./revolve.py --experiment-name EC_C/data/cost_of_regulation_big_$i --run $i --manager experiments/EC_C/cost_of_regulation.py --port-start 11300  --evaluation-time 50;

                sleep 5s
	   done
done

