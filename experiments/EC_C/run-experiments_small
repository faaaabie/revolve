	do
         for i in {4..4}; do
                ./revolve.py --experiment-name EC_C/data/cost_of_regulation_big_$i --run $i --manager experiments/EC_C/cost_of_regulation.py --port-start 11250  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
         for i in {5..5}; do
                ./revolve.py --experiment-name EC_C/data/cost_of_regulation_big_$i --run $i --manager experiments/EC_C/cost_of_regulation.py --port-start 11350  --evaluation-time 50;

                sleep 5s
	   done
done

while true
	do
    sleep 900s;
    kill $(  ps aux | grep 'gzserver' | awk '{print $2}');
    kill $(  ps aux | grep 'revolve.py' | awk '{print $2}');
    sleep 60s;
done
